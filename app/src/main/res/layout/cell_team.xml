<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ttf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    tools:context=".Main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@android:color/white">

        <com.agency.trium.doubleteamcompozer.views.textview.TypefacedTextView
            android:id="@+id/number_team"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@android:color/holo_orange_dark"
            android:layout_margin="10dip"
            android:text="1"
            android:gravity="center"
            android:textSize="27sp"
            ttf:typeface="Roboto-Light.ttf"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/nameTeam"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:hint="@string/nameTeam"
            android:background="@android:color/transparent"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/number_team"
            />

    </RelativeLayout>

</RelativeLayout>
