<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttf="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dip">

    <ImageView
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:src="@drawable/ic_action_add_group"
        android:layout_centerInParent="true" />

    <com.agency.trium.doubleteamcompozer.views.textview.TypefacedTextView
        android:id="@+id/team_count"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:minWidth="42dp"
        android:minHeight="42dp"
        android:background="@drawable/shape_round"
        android:text="0"
        android:textSize="9sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginTop="20dip"
        ttf:typeface="RobotoCondensed-Bold.ttf" />

</RelativeLayout>
